<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp">

    <!-- Title -->
    <EditText
        android:id="@+id/editTitle"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:hint="Title" />

    <!-- Description -->
    <EditText
        android:id="@+id/editDescription"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:hint="Description" />

    <!-- Current Week -->
    <EditText
        android:id="@+id/editCurrentWeek"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:hint="Current Week"
        android:inputType="number" />

    <!-- Final Week -->
    <EditText
        android:id="@+id/editFinalWeek"
        android:layout_width="match_parent"
        android:layout_height="68dp"
        android:hint="Final Week"
        android:inputType="number" />

    <!-- Save Button -->
    <Button
        android:id="@+id/saveButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Save" />

    <!-- Progress Buttons -->
    <LinearLayout
        android:id="@+id/progressButtonsContainer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center">

        <Button
            android:id="@+id/progressOneThird"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="1/3" />

        <Button
            android:id="@+id/progressTwoThird"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="2/3" />

        <Button
            android:id="@+id/progressFull"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="3/3" />
    </LinearLayout>

    <!-- Progress Circle -->
    <View
        android:id="@+id/progressCircle"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginTop="16dp" />
</LinearLayout>
